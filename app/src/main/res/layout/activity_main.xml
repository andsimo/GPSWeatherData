<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#ff313030">

    <!-- UPDATE BUTTON -->
    <Button
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:id="@+id/updateButton"
        android:onClick="updateFiles"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/updatebutton"/>


    <!--SHOW MAP BUTTON -->

    <Button
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:id="@+id/showMapButton"
        android:layout_above="@+id/updateButton"
        android:layout_alignLeft="@+id/updateButton"
        android:layout_alignStart="@+id/updateButton"
        android:layout_marginBottom="10dp"
        android:layout_alignRight="@+id/updateButton"
        android:layout_alignEnd="@+id/updateButton"
        android:onClick="showMap"
        android:background="@drawable/showmapbutton"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/parans"
        android:id="@+id/logo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="80dp"
        android:textColor="#ffd2d2d2"
        />




</RelativeLayout>
